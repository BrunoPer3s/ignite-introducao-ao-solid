                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "id": "6c10fddc-7f89-4d76-a669-6abec1b5ffa9",
                    "admin": false,
                    "name": "Bruno",
                    "email": "brunoperes7@hotmail.com",
                    "created_at": "2021-03-25T20:29:30.184Z",
                    "updated_at": "2021-03-25T20:29:30.184Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
