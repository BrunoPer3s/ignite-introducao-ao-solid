  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Criar um novo usuário",
        "requestBody": {
          "required": true,
          "description": "Campos obrigatórios para a criação de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Bruno",
                  "email": "brunoperes7@hotmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "6c10fddc-7f89-4d76-a669-6abec1b5ffa9",
                    "admin": false,
                    "name": "Bruno",
                    "email": "brunoperes7@hotmail.com",
                    "created_at": "2021-03-25T20:29:30.184Z",
                    "updated_at": "2021-03-25T20:29:30.184Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "This email is already in use"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Retorna todos os usuários",
        "description": "Somente usuário admin pode acessar",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": "6c10fddc-7f89-4d76-a669-6abec1b5ffa9",
                      "admin": false,
                      "name": "Bruno",
                      "email": "brunoperes7@hotmail.com",
                      "created_at": "2021-03-25T20:29:30.184Z",
                      "updated_at": "2021-03-25T20:29:30.184Z"
                    },
                    {
                      "id": "6c10fddc-7f89-4d76-a669-6abec1b5ffa9",
                      "admin": false,
                      "name": "Bruno",
                      "email": "brunoperes7@hotmail.com",
                      "created_at": "2021-03-25T20:29:30.184Z",
                      "updated_at": "2021-03-25T20:29:30.184Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "You need to be an admistrator to list all users"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Retorna um usuário específico",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "description": "ID do usuário",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "id": "6c10fddc-7f89-4d76-a669-6abec1b5ffa9",
                    "admin": false,
                    "name": "Bruno",
                    "email": "brunoperes7@hotmail.com",
                    "created_at": "2021-03-25T20:29:30.184Z",
                    "updated_at": "2021-03-25T20:29:30.184Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Torna um usuário admin",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
